<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="EditeurAutomates.Controller.MainWindowController" stylesheets="@../CSS/WindowStyle.css">

	<MenuBar fx:id="mainMenuBar">
		<Menu text="Fichier">
			<MenuItem text="Créer" onAction="#createButton" accelerator="Ctrl+N"/>
			<MenuItem text="Enregistrer" onAction="#saveButton" accelerator="Ctrl+S"/>
			<MenuItem text="Enregistrer sous..." onAction="#saveAsButton" accelerator="Ctrl+Shift+S"/>
		</Menu>
		<Menu text="Aide">
			<MenuItem text="A propos..." onAction="#openHelpWindow" accelerator="f1"/>
			<MenuItem text="Représentation XML" onAction="#openXMLDoc"/>
		</Menu>
	</MenuBar>

	<TabPane side="RIGHT" stylesheets="@../CSS/Tabbar.css">
		<Tab fx:id="graphicsTab" closable="false">
			<fx:include source="GraphicView.fxml"/> <!-- Fichier FXML de la vue graphique -->
		</Tab>
		<Tab fx:id="XMLTab" closable="false">
			<fx:include source="XMLView.fxml"/> <!-- Fichier FXML de la vue XML -->
		</Tab>
	</TabPane>

</VBox>
